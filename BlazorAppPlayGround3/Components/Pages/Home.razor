@page "/"

<PageTitle>Home</PageTitle>

<EditForm Model="@person" OnValidSubmit="HandleValidSubmit" FormName="Form1">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="firstName">First Name:</label>
        <InputText id="firstName" @bind-Value="person.FirstName" class="form-control" />
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <InputText id="lastName" @bind-Value="person.LastName" class="form-control" />
    </div>

    <div>
        <button @onclick="HandleValidSubmit" class="btn btn-primary">Save</button>
    </div>
</EditForm>

<h3>Person Details</h3>
<p>First Name: @person.FirstName</p>
<p>Last Name: @person.LastName</p>

@code {
    private Person person = new Person
        {
            FirstName = "John",
            LastName = "Doe"
        };

    private void HandleValidSubmit()
    {
        // Handle valid form submission
        Console.WriteLine($"Form submitted! FirstName: {person.FirstName}, LastName: {person.LastName}");
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}
